{
  "name": "browser",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cd crates/gui && npm run dev",
    "build": "cd crates/gui && npm run build",
    "preview": "cd crates/gui && npm run preview",
    "test": "cd crates/gui && npm test",
    "test:ui": "cd crates/gui && npm run test:ui",
    "test:coverage": "cd crates/gui && npm run test:coverage",
    "typecheck": "cd crates/gui && npm run typecheck",
    "lint": "cd crates/gui && npm run lint",
    "dev:router": "pnpm --filter @browser/afm-router dev",
    "dev:registry": "pnpm --filter @browser/afm-registry dev",
    "dev:pipelines": "pnpm --filter @browser/afm-pipelines dev",
    "dev:marketplace": "pnpm --filter @browser/afm-marketplace dev",
    "prepare": "husky"
  },
  "keywords": [
    "browser",
    "decentralized",
    "web3"
  ],
  "author": "",
  "license": "ISC",
  "description": "Decentralized Browser Application",
  "workspaces": [
    "crates/gui",
    "services/router",
    "services/registry",
    "services/pipelines",
    "apps/afm-marketplace"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.rs": [
      "cargo fmt --",
      "cargo clippy -- -D warnings"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.1.2"
  }
}
